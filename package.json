{
  "name": "minim",
  "version": "0.20.3",
  "description": "A library for interacting with JSON through Refract elements",
  "main": "lib/minim.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "browserify -t babelify -d -s minim -x lodash -o dist/minim.js lib/minim.js",
    "coverage": "istanbul cover _mocha -- -R spec --recursive",
    "coveralls": "coveralls <coverage/lcov.info",
    "frontendtests": "karma start",
    "lint": "eslint lib",
    "nodejstests": "mocha -R spec --recursive",
    "precoveralls": "npm run coverage",
    "prepublish": "npm run lint",
    "test": "npm run nodejstests && npm run frontendtests"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/refractproject/minim"
  },
  "keywords": [
    "JSON",
    "MSON",
    "Refract"
  ],
  "author": "Stephen Mizell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/refractproject/minim/issues"
  },
  "homepage": "https://github.com/refractproject/minim",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "^14.4.0",
    "chai": "^4.0.0",
    "coveralls": "^2.11.2",
    "eslint": "^4.3.0",
    "istanbul": "^0.4.5",
    "karma": "^1.7.0",
    "karma-browserify": "^5.1.1",
    "karma-chai": "^0.1.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-sinon": "^1.0.4",
    "mocha": "^3.4.2",
    "mocha-sinon": "^2.0.0",
    "sinon": "^2.4.1",
    "sinon-chai": "^2.7.0",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "lodash": "^4.15.0"
  },
  "engines": {
    "node": ">=4"
  }
}
