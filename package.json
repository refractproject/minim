  "homepage": "https://github.com/refractproject/minim",
  "devDependencies": {
    "chai": "^1.10.0",
    "coveralls": "^2.11.2",
    "eslint": "^0.21.2",
    "istanbul": "^0.3.14",
    "karma": "^0.13.3",
    "karma-browserify": "^4.2.1",
    "karma-chai": "^0.1.0",
    "karma-firefox-launcher": "^0.1.6",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.0.4",
    "karma-sinon": "^1.0.4",
    "mocha": "^2.2.4",
