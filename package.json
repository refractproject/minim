{
  "name": "minim",
  "version": "0.22.1",
  "description": "A library for interacting with JSON through Refract elements",
  "main": "lib/minim.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build:cjs && npm run build:browser",
    "build:cjs": "babel src --out-dir lib",
    "build:browser": "browserify -d -s minim -t [ babelify ] -o dist/minim.js src/minim.js",
    "coverage": "istanbul cover _mocha -- -R spec --recursive --require babel-register",
    "coveralls": "coveralls <coverage/lcov.info",
    "frontendtests": "karma start",
    "lint": "eslint lib",
    "nodejstests": "mocha -R spec --recursive --require babel-register",
    "precoveralls": "npm run coverage",
    "prepublish": "npm run lint",
    "test": "npm run nodejstests && npm run frontendtests"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/refractproject/minim"
  },
  "keywords": [
    "JSON",
    "MSON",
    "Refract"
  ],
  "author": "Stephen Mizell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/refractproject/minim/issues"
  },
  "homepage": "https://github.com/refractproject/minim",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "babelify": "^8.0.0",
    "browserify": "^16.2.2",
    "chai": "^4.0.0",
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "fantasy-land": "^3.5.0",
    "istanbul": "^0.4.5",
    "karma": "^2.0.2",
    "karma-browserify": "^5.2.0",
    "karma-chai": "^0.1.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-sinon": "^1.0.4",
    "mocha": "^6.0.0",
    "mocha-sinon": "^2.1.0",
    "sinon": "^5.0.10",
    "sinon-chai": "^3.1.0",
    "watchify": "^3.11.0"
  },
  "dependencies": {
    "lodash": "^4.15.0"
  },
  "engines": {
    "node": ">=4"
  }
}
