{
    "rules": {
        "no-underscore-dangle": 0,
        "strict": 2,
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "prefer-const": "error",
        "no-var": "error",
        "no-use-before-define": 0
    },
    "env": {
        "node": true,
        "browser": true,
        "mocha": true,
        "es6": true
    }
}
